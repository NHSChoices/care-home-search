<div class="provider">
  <h1><%= provider.name %></h1>
  <div class="row-fluid">
    <div class="span6">
      <ul class="links">
        <li><%= link_to "Back to results", :back %></li>
        <% provider.website.map do |website| %>
          <li>
            <strong>Web:</strong> <%= link_to website, website %>
          </li>
        <% end %>
      </ul>
      <address>
        <% provider.address.lines.each do |line| %>
          <%= line %><br/>
        <% end %>
        <%= provider.address.postcode %><br />
      </address>
      <% provider.contact.map do |contact| %>
        <address>
          <strong>Tel:</strong> <%= contact.phone %>
        </address>
      <% end %>
      <%== provider.summary %>
    </div>
    <div class="map-container span6">
      <%= map_marker provider %>
      <div id="map_canvas">
      </div>
    </div>
  </div>
</div>
